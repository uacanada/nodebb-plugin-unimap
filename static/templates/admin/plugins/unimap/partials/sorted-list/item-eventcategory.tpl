<li data-type="item" class="list-group-item p-3" data-item-slug="{slug}">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="d-flex align-items-center">  <h5 class="mb-0"> {name}</h5>  </div>
        <span class="badge text-bg-secondary"><i class="fa-solid fa-link me-2"></i> {slug}</span>
    </div>
   
    <div class="d-flex justify-content-end">
        <button type="button" data-type="edit" class="btn btn-outline-secondary btn-sm rounded-circle me-2"><i class="fas fa-edit"></i></button>
        <button type="button" data-type="remove" class="btn btn-outline-danger btn-sm rounded-circle"><i class="fas fa-trash-alt"></i></button>
    </div>
    
</li>
